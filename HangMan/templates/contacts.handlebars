<form id="ajax-contact" method="POST" action="mailto:#">
    <h1>Contact form:</h1>  
    <div class="contact-field">
        <input type="email" id="contact-email" name="contact-email" placeholder="Username/email" maxlength="30" required>
        <span>&#42;</span>
    </div>
    <div class="contact-field">
        <input type="text" id="contact-subject" name="contact-subject" placeholder="Subject" maxlength="30" required>
        <span>&#42;</span>
    </div>

    <div class="contact-field">
        <textarea id="contact-message" name="contact-message" placeholder="Message" maxlength="120" required></textarea>
        <span>&#42;</span>
    </div>
    <div class="contact-submit-btn">
        <button type="submit" id="contact-submit">Submit</button>
    </div>
    <div class="contact-clear-btn">
        <button type="reset" id="contact-submit">Submit</button>
    </div>
</form>