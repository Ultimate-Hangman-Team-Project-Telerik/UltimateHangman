<form id="ajax-register" method="POST" action="#">
    <h1>Register form:</h1>  
    <div class="register-field">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" maxlength="30" required>
        <span>&#42;</span>
    </div>
    <div class="register-field">
        <label for="register-password">Password:</label>
        <input type="password" id="register-password" name="register-password" maxlength="30" required>
        <span>&#42;</span>
    </div>
    <div class="register-field">
        <label for="register-repeat-password">Repeat password:</label>
        <input type="password" id="register-repeat-password" name="register-repeat-password" maxlength="30" required>
        <span>&#42;</span>
    </div>
    <div class="register-field">
        <label for="register-full-name">Full Name:</label>
        <input type="text" id="register-full-name" name="register-full-name" maxlength="30">
    </div>
    <div class="register-field">
        <label for="register-email">E-mail:</label>
        <input type="email" id="register-email" name="register-email" maxlength="30">
    </div>
    <div class="submit-btn">
        <button type="submit" id="register-submit">Register</button>
    </div>

    <div class="register-btn">
        <button type="reset" id="register-clear">Clear form</button>
    </div>
</form>